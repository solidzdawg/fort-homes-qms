{
  "templateName": "Module Traveler - Build-in-Place",
  "version": "3.0",
  "methodology": "Build-in-Place (Static Bay)",
  "header": {
    "fields": [
      {
        "id": "serialNumber",
        "label": "Module Serial Number",
        "type": "text",
        "format": "SN-YYYY-###",
        "required": true
      },
      {
        "id": "model",
        "label": "Model",
        "type": "select",
        "options": [
          "Aspen Commons 1BR",
          "Aspen Commons 2BR",
          "Melrose 2BR",
          "Melrose 3BR",
          "Summit 3BR",
          "Summit 4BR",
          "Grand 4BR"
        ],
        "required": true
      },
      {
        "id": "assignedBay",
        "label": "Assigned Bay",
        "type": "select",
        "options": ["Bay 1", "Bay 2", "Bay 3", "Bay 4", "Bay 5"],
        "required": true
      },
      {
        "id": "bayAssignmentDate",
        "label": "Bay Assignment Date",
        "type": "date",
        "required": true
      },
      {
        "id": "targetCompletionDate",
        "label": "Target Completion Date",
        "type": "date",
        "required": true
      },
      {
        "id": "baySupervisor",
        "label": "Bay Supervisor",
        "type": "text",
        "required": true
      },
      {
        "id": "customerProject",
        "label": "Customer/Project",
        "type": "text",
        "required": false
      }
    ]
  },
  "phaseSignoffs": [
    {
      "phase": 1,
      "name": "Chassis & Floor Deck",
      "holdPoint": "HP-1",
      "isHoldPoint": true,
      "signoffFields": [
        {
          "id": "crewSignoff",
          "label": "Crew Lead Sign-Off",
          "type": "signature"
        },
        {
          "id": "qaSignoff",
          "label": "QA Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date"
        },
        {
          "id": "status",
          "label": "Status",
          "type": "select",
          "options": ["Approved", "Approved w/ Comments", "Not Approved (NCR)"]
        }
      ],
      "checklistItems": [
        "Chassis frame dimensions verified (±1/8\")",
        "Square check passed (diagonal diff ≤1/4\")",
        "Joist spacing per plans",
        "Subfloor fastened per schedule (glued & screwed)",
        "Material certifications on file",
        "Area cleaned and ready for Phase 2"
      ]
    },
    {
      "phase": 2,
      "name": "Wall Framing & Sheathing",
      "holdPoint": "HP-2",
      "isHoldPoint": true,
      "signoffFields": [
        {
          "id": "crewSignoff",
          "label": "Crew Lead Sign-Off",
          "type": "signature"
        },
        {
          "id": "qaSignoff",
          "label": "QA Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date"
        },
        {
          "id": "status",
          "label": "Status",
          "type": "select",
          "options": ["Approved", "Approved w/ Comments", "Not Approved (NCR)"]
        }
      ],
      "checklistItems": [
        "Walls plumb (±1/8\" per 8')",
        "Stud spacing per plans",
        "Sheathing nailing pattern verified",
        "WRB installed with proper lapping",
        "Window/door ROs correct size",
        "Structural connectors installed per plans",
        "Area cleaned and ready for Phase 3"
      ]
    },
    {
      "phase": 3,
      "name": "Roof/Ceiling Framing",
      "holdPoint": "HP-3",
      "isHoldPoint": true,
      "signoffFields": [
        {
          "id": "crewSignoff",
          "label": "Crew Lead Sign-Off",
          "type": "signature"
        },
        {
          "id": "qaSignoff",
          "label": "QA Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date"
        },
        {
          "id": "status",
          "label": "Status",
          "type": "select",
          "options": ["Approved", "Approved w/ Comments", "Not Approved (NCR)"]
        }
      ],
      "checklistItems": [
        "Truss/rafter spacing per plans",
        "Bearing connections verified",
        "Hurricane ties installed at all locations",
        "Roof sheathing nailing pattern verified",
        "Underlayment properly lapped",
        "Ventilation provisions in place",
        "Area cleaned and ready for Phase 4"
      ]
    },
    {
      "phase": 4,
      "name": "MEP Rough-In & Testing",
      "holdPoint": "HP-4",
      "isHoldPoint": true,
      "tpiaRequired": true,
      "signoffFields": [
        {
          "id": "crewSignoff",
          "label": "Trade Crews Sign-Off",
          "type": "signature"
        },
        {
          "id": "qaSignoff",
          "label": "QA Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "tpiaSignoff",
          "label": "TPIA Inspector Sign-Off",
          "type": "signature"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date"
        },
        {
          "id": "status",
          "label": "Status",
          "type": "select",
          "options": ["Approved", "Approved w/ Comments", "Not Approved (NCR)"]
        }
      ],
      "checklistItems": [
        "Electrical rough-in complete per plans",
        "Plumbing DWV complete per plans",
        "Plumbing water supply complete per plans",
        "HVAC rough-in complete per plans",
        "Water supply pressure test PASSED (100 PSI, 15 min)",
        "DWV test PASSED",
        "Electrical continuity verified",
        "GFCI/AFCI locations correct per NEC 2023",
        "All boxes, supports properly installed",
        "TPIA inspection completed"
      ],
      "testResults": [
        {
          "test": "Water Supply Pressure Test",
          "fields": [
            { "id": "startPressure", "label": "Start Pressure (PSI)", "type": "number" },
            { "id": "endPressure", "label": "End Pressure (PSI)", "type": "number" },
            { "id": "duration", "label": "Duration (min)", "type": "number" },
            { "id": "result", "label": "Result", "type": "select", "options": ["PASS", "FAIL"] }
          ]
        },
        {
          "test": "DWV Test",
          "fields": [
            { "id": "testType", "label": "Test Type", "type": "select", "options": ["Water Head", "Air Pressure"] },
            { "id": "pressure", "label": "Pressure/Head", "type": "text" },
            { "id": "duration", "label": "Duration (min)", "type": "number" },
            { "id": "result", "label": "Result", "type": "select", "options": ["PASS", "FAIL"] }
          ]
        }
      ]
    },
    {
      "phase": 5,
      "name": "Insulation & Air Sealing",
      "holdPoint": "HP-5",
      "isHoldPoint": true,
      "signoffFields": [
        {
          "id": "crewSignoff",
          "label": "Insulation Crew Sign-Off",
          "type": "signature"
        },
        {
          "id": "qaSignoff",
          "label": "QA Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date"
        },
        {
          "id": "status",
          "label": "Status",
          "type": "select",
          "options": ["Approved", "Approved w/ Comments", "Not Approved (NCR)"]
        }
      ],
      "checklistItems": [
        "Insulation R-values match plans",
        "Grade I installation quality (no gaps/voids/compression)",
        "All penetrations sealed",
        "Rim joists insulated and sealed",
        "Vapor retarder installed (where required)",
        "Pre-drywall blower door test (if required)",
        "Area cleaned and ready for Phase 6"
      ],
      "testResults": [
        {
          "test": "Pre-Drywall Blower Door (Optional)",
          "fields": [
            { "id": "ach50", "label": "ACH50", "type": "number" },
            { "id": "cfm50", "label": "CFM50", "type": "number" },
            { "id": "result", "label": "Result", "type": "select", "options": ["PASS", "FAIL", "N/A"] }
          ]
        }
      ]
    },
    {
      "phase": 6,
      "name": "Drywall & Interior Shell",
      "holdPoint": "HP-6",
      "isHoldPoint": true,
      "signoffFields": [
        {
          "id": "crewSignoff",
          "label": "Drywall Crew Sign-Off",
          "type": "signature"
        },
        {
          "id": "qaSignoff",
          "label": "QA Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date"
        },
        {
          "id": "status",
          "label": "Status",
          "type": "select",
          "options": ["Approved", "Approved w/ Comments", "Not Approved (NCR)"]
        }
      ],
      "checklistItems": [
        "Drywall fastener spacing per schedule",
        "Fire-rated assemblies correct (where required)",
        "Level 4 finish achieved (Level 5 where specified)",
        "No visible defects (bubbles, ridges, nail pops)",
        "Box cutouts clean and properly sized",
        "Area cleaned and ready for Phase 7"
      ]
    },
    {
      "phase": 7,
      "name": "Interior Finish & Trim",
      "holdPoint": "QA-7",
      "isHoldPoint": false,
      "signoffFields": [
        {
          "id": "crewSignoff",
          "label": "Finish Crews Sign-Off",
          "type": "signature"
        },
        {
          "id": "qaSignoff",
          "label": "QA Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date"
        },
        {
          "id": "punchList",
          "label": "Punch List Items",
          "type": "number"
        }
      ],
      "checklistItems": [
        "Paint complete and acceptable quality",
        "Flooring installed correctly",
        "All doors operate properly",
        "Cabinets aligned and functional",
        "Countertops installed",
        "All electrical devices installed and tested",
        "All plumbing fixtures installed and tested",
        "HVAC registers installed",
        "Appliances installed and functional",
        "GFCI/AFCI devices tested",
        "Punch list created for any deficiencies"
      ]
    },
    {
      "phase": 8,
      "name": "Final Inspection & Pre-Ship",
      "holdPoint": "HP-8",
      "isHoldPoint": true,
      "tpiaRequired": true,
      "signoffFields": [
        {
          "id": "productionManager",
          "label": "Production Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "qaSignoff",
          "label": "QA Manager Sign-Off",
          "type": "signature"
        },
        {
          "id": "tpiaSignoff",
          "label": "TPIA Final Inspection",
          "type": "signature"
        },
        {
          "id": "date",
          "label": "Date",
          "type": "date"
        },
        {
          "id": "insigniaNumber",
          "label": "DOH Insignia Number",
          "type": "text"
        }
      ],
      "checklistItems": [
        "All previous hold points signed off",
        "All NCRs closed",
        "Punch list items completed",
        "Final blower door test PASSED (≤3.0 ACH50)",
        "TPIA final inspection PASSED",
        "Module documentation package complete",
        "Exterior finishes complete",
        "Weatherproofing applied for transport",
        "DOH Construction Insignia applied by QA Manager"
      ],
      "testResults": [
        {
          "test": "Final Blower Door Test",
          "fields": [
            { "id": "ach50", "label": "ACH50", "type": "number" },
            { "id": "cfm50", "label": "CFM50", "type": "number" },
            { "id": "enclosureArea", "label": "Enclosure Area (sq ft)", "type": "number" },
            { "id": "volume", "label": "Volume (cu ft)", "type": "number" },
            { "id": "result", "label": "Result", "type": "select", "options": ["PASS", "FAIL"] }
          ]
        }
      ]
    }
  ],
  "ncrSection": {
    "fields": [
      {
        "id": "ncrNumber",
        "label": "NCR Number",
        "type": "text"
      },
      {
        "id": "phase",
        "label": "Phase at Discovery",
        "type": "select"
      },
      {
        "id": "holdType",
        "label": "Hold Type",
        "type": "select",
        "options": ["Phase Hold", "Trade-Specific Hold", "Bay Quarantine"]
      },
      {
        "id": "description",
        "label": "Description",
        "type": "textarea"
      },
      {
        "id": "disposition",
        "label": "Disposition",
        "type": "select",
        "options": ["Rework", "Use-As-Is", "Scrap"]
      },
      {
        "id": "closureDate",
        "label": "Closure Date",
        "type": "date"
      }
    ]
  },
  "footer": {
    "fields": [
      {
        "id": "bayExitDate",
        "label": "Bay Exit Date",
        "type": "date"
      },
      {
        "id": "totalDaysInBay",
        "label": "Total Days in Bay",
        "type": "number"
      },
      {
        "id": "shipDate",
        "label": "Ship Date",
        "type": "date"
      },
      {
        "id": "destination",
        "label": "Destination",
        "type": "text"
      }
    ]
  }
}
