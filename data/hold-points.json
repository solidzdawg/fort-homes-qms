  "rfiProcess": {
    "steps": [
      {
        "step": 1,
        "name": "Pre-Inspection by Bay Supervisor",
        "actions": [
          "Complete pre-inspection checklist on Traveler",
          "Verify all phase work complete",
          "Clean work area",
          "Ensure test results documented (if applicable)"
        ]
      },
      {
        "step": 2,
        "name": "Submit Request for Inspection",
        "method": "Manual log or digital system",
        "fields": [
          "Module serial number",
          "Bay number",
          "Phase and Hold Point",
          "Ready for inspection indication"
        ],
        "notification": "Automatic to QA Manager",
        "alternative": "Verbal notification if urgent or system unavailable"
      },
      {
        "step": 3,
        "name": "QA Manager Inspection",
        "responseTime": "Within 4 hours (same day if before 2 PM)",
        "equipment": [
          "Tablet with digital Traveler and ITP",
          "Measuring tools (tape, level, square)",
          "Camera",
          "DOH-approved plans"
        ]
      },
      {
        "step": 4,
        "name": "Inspection Result",
        "outcomes": [
          {
            "result": "APPROVED",
            "action": "QA Manager signs Traveler, next phase authorized"
          },
          {
            "result": "APPROVED WITH COMMENTS",
            "action": "Minor items noted, documented for correction, next phase may proceed"
          },
          {
            "result": "NOT APPROVED (NCR)",
            "action": "NCR issued, phase held until corrective action complete and re-inspected"
          }
        ]
      }
    ]
  }
